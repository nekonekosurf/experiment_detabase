<html lang="ja" >
  <head>
    <meta charaset="utf-8">
    <title> <%= @title%> </title>
  </head>
  <body>
    <h1> User:  <%=@user_id%>    </h1>
      <form  action="update" method="post">
        <tr>
          <td>  <input type="text" name="message" > </td>
          <td>  <input type="submit" value="POST" > </td>
        </tr>
      </form>




      <table border>
        <tr>
          <th>投稿番号</th>
          <th>ユーザーID</th>
          <th>コメント</th>
          <th>投稿時間</th>
        </tr>
      <%   @board.each do |brd| %>
        <tr>
          <td><%= brd.id %></td>
          <td><%= brd.user_id %></td>
          <td><%= brd.message %></td>
          <td><%= brd.taimu %></td>
        </tr>
      <% end %>
    </table>

  </body>
</html>
